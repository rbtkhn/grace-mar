TELEGRAM_BOT_TOKEN=your-telegram-bot-token
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4o
OPENAI_ANALYST_MODEL=gpt-4o-mini

# Telegram Mini App — profile URL (optional, must be HTTPS; serves profile at grace-mar.com)
# PROFILE_MINIAPP_URL=https://grace-mar.com
# DASHBOARD_MINIAPP_URL is still supported as fallback

# Archive via GitHub API (required on Render; optional locally — falls back to local file)
# GITHUB_TOKEN=ghp_...
# GRACE_MAR_REPO=rbtkhn/grace-mar

# WeChat Official Account (optional)
# WECHAT_TOKEN=your-wechat-callback-token
# WECHAT_APP_ID=your-app-id
# WECHAT_APP_SECRET=your-app-secret
# WECHAT_HOST=0.0.0.0
# WECHAT_PORT=5000

# Rate limiting (optional, per chat per hour)
# RATE_LIMIT_WINDOW_SEC=3600
# RATE_LIMIT_MAIN=60
# RATE_LIMIT_ANALYST=120
