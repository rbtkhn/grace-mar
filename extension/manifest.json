{
  "manifest_version": 3,
  "name": "Grace-Mar Save to Record",
  "version": "0.2.0",
  "description": "Save pages and LLM transcripts to your Grace-Mar Record â€” one-click capture from any URL; paste transcript for handback.",
  "permissions": [
    "activeTab",
    "contextMenus",
    "scripting",
    "notifications",
    "storage",
    "alarms"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "options_page": "options.html",
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}
